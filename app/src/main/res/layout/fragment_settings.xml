<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <Switch
        android:id="@+id/switchUnits"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="@string/settings_unitsButton"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/yellow_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switchAlerts"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:layout_marginBottom="552dp"
        android:text="@string/settings_alertButton"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/yellow_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:text="@string/settings_velocityText"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textColor="@color/yellow_500"
        app:layout_constraintBottom_toTopOf="@+id/switchAlerts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchUnits" />

    <EditText
        android:id="@+id/editTextNumber3"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:inputType="number"
        android:text="@string/settings_velocityDefault"
        app:layout_constraintBottom_toTopOf="@+id/switchAlerts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/switchUnits" />

</androidx.constraintlayout.widget.ConstraintLayout>